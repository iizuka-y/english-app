<header>
  <div class="header-container">
    <div class="header_logo">
      <h1><%= link_to "面白英作文", root_path, id: "logo" %></h1>
    </div>
    <nav class="header_nav">
      <ul>
        <% if logged_in? %>
          <li><%= link_to "トップ", root_path %></li>
          <li><%= link_to "お知らせ", '#' %></li>
          <li><%= link_to "新規投稿", new_post_path %></li>
          <li><%= link_to "マイページ", user_path(current_user) %></li>
          <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "面白英作文とは？", '#' %></li>
          <li><%= link_to "新規登録", signup_path %></li>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>

      </ul>
    </nav>
  </div>
</header>
